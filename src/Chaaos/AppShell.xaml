<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="Chaaos.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:Chaaos.Views"
	xmlns:local="clr-namespace:Chaaos">

	<TabBar>
		<ShellContent
			Title="Main"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:MainPage}" />
		<ShellContent
			Title="ListDetail"
			Icon="iconlistdetail.png"
			ContentTemplate="{DataTemplate views:ListDetailPage}" />
		<ShellContent
			Title="Map"
			Icon="iconmap.png"
			ContentTemplate="{DataTemplate views:MapPage}" />
		<ShellContent
			Title="WebView"
			Icon="iconwebview.png"
			ContentTemplate="{DataTemplate views:WebViewPage}" />
		<ShellContent
			Title="Sample"
			Icon="iconsample.png"
			ContentTemplate="{DataTemplate views:SamplePage}" />
		<ShellContent
			Title="Localization"
			Icon="iconlocalization.png"
			ContentTemplate="{DataTemplate views:LocalizationPage}" />
	</TabBar>
</Shell>
